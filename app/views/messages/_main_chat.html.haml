.main-chat
  .main-chat__header
    .main-chat__header__box
      .main-chat__header__box__name
        = @group.name
      .main-chat__header__box__member
        Memberï¼š
        - @group.users.each do |user|
          = user.name
    .main-chat__header__edit
      = link_to "Edit", edit_group_path(params[:group_id]), class: "main-chat__header__edit__btn"
  .main-chat__contents
    = render @messages
  .main-chat__form
    .main-chat__form__contents
      .main-chat__form__contents__box
        = form_for [@group, @message] do |f|
          = f.text_field :content, placeholder: 'type a message'
          = f.label :image, class: 'main-chat__form__contents__box__picture' do
            = icon('fas', 'image', class: "main-chat__form__contents__box__picture__btn")
            = f.file_field :image
          .main-chat__form__contents__send
            = f.submit 'Send', class: 'main-chat__form__contents__send__btn'



